<jumbotron>
<h1>Burger Time!</h1>
</jumbotron>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
<ul>
  {{#each Burgers}}
    <li>
      <p>
        {{this.id}}. {{this.Burger}}

        <button data-Burgerid="{{this.id}}" class="delBurger">Delete</button>
      </p>
    </li>
  {{/each}}
</ul>
</div> {{!--end of column 1--}}
<h2>Eat-Da-Burger!</h2>
<form id="addBurger" class="button-size">
	<textarea type="text" name="Burger"></textarea>
	<button type="submit">Save Burger!</button>
</form>

